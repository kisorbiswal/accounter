<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:VerticalPanel ui:field="mainViewPanel">
		<g:Label ui:field="headerLabel" styleName="setup_header_label" />
		<g:VerticalPanel ui:field="viewPanel">
			<g:VerticalPanel ui:field="sell" styleName="sell_panel">
				<g:RadioButton name="sell_type" ui:field="servicesOnly" />
				<g:Label ui:field="servicesOnlyText" styleName="organisation_comment" />
				<g:RadioButton name="sell_type" ui:field="productsOnly" />
				<g:Label ui:field="productsOnlyText" styleName="organisation_comment" />
				<g:RadioButton name="sell_type" ui:field="both" />
				<g:Label ui:field="bothText" styleName="organisation_comment" />
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="vat" styleName="sales_tax">
				<g:HTML wordWrap="true" ui:field="vatHeader" styleName="setup_header_label" />
				<g:RadioButton name="vat" ui:field="vatYes" styleName="employee_yesno" />
				<g:RadioButton name="vat" ui:field="vatNo" styleName="employee_yesno" />
			</g:VerticalPanel>

			<g:VerticalPanel ui:field="salesTax" styleName="sales_tax">
				<g:HTML wordWrap="true" ui:field="salesTaxHead" styleName="setup_header_label" />
				<g:RadioButton name="sales_tax" ui:field="salesTaxYes"
					styleName="employee_yesno" />
				<g:RadioButton name="sales_tax" ui:field="salesTaxNo"
					styleName="employee_yesno" />
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 
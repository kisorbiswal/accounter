		<query-param name="start" type="com.vimukti.accounter.core.LongUseType" />
		<query-param name="end" type="com.vimukti.accounter.core.LongUseType" />
		from com.vimukti.accounter.core.PayStructureItem PI
		where
		(PI.payStructure.employee = :employee or
		PI.payStructure.employeeGroup
		= :group)
		and PI.payStructure.company = :company
		and PI.effectiveFrom
		between :start and :end
		order by PI.rate desc
	</query>

